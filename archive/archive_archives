#!/bin/bash
# Принцип роботи:
# Якщо кількість аргументів менше 2х, або якийсь аргумент, окрім першого не є .zip, скрипт закінчить свою роботу
# 1 аргумент це назва архіву, що повинен створитися
if [ "$#" -lt 2 ]; then exit "1"; fi
for file in "${@:2}"; do
    if [[ $file != *.zip ]]; then exit "2"; fi; done
zip -q -r "$@"